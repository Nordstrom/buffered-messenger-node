    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0"
  },
  "bugs": {
    "url": "https://github.com/Nordstrom/interval-buffer-node/issues"
